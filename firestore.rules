rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth.uid != null;
    }

    function isHighlightOwner() {
      return isSignedIn() && resource.data.userId == request.auth.uid;
    }

    function isHighlightEngagementUpdate() {
      return isSignedIn() &&
        resource.data.userId == request.resource.data.userId &&
        request.resource.data.diff(resource.data).addedKeys().hasOnly([]) &&
        request.resource.data.diff(resource.data).removedKeys().hasOnly([]) &&
        request.resource.data.diff(resource.data).changedKeys().hasOnly(["upvotes", "likedBy", "commentsCount", "views"]);
    }

    // User profiles - anyone can read, only owner can write
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth.uid == userId;
    }
    
    // Posts - authenticated users can read/write
    match /posts/{postId} {
      allow read, write: if request.auth.uid != null;
    }

    // Highlights
    match /highlights/{highlightId} {
      allow read: if true;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update: if isHighlightOwner() || isHighlightEngagementUpdate();
      allow delete: if isHighlightOwner();

      match /comments/{commentId} {
        allow read: if true;
        allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
        allow update, delete: if isSignedIn() && request.auth.uid == resource.data.userId;
      }
    }
    
    // Chats - participants can read, authenticated users can create
    match /chats/{chatId} {
      // Allow read if user is a participant
      allow read: if request.auth.uid != null && 
        (request.auth.uid in resource.data.participants || 
         request.auth.uid in request.resource.data.participants);
      
      // Allow create if user is authenticated and is in participants array
      allow create: if request.auth.uid != null && 
        request.auth.uid in request.resource.data.participants;
      
      // Allow update if user is a participant
      allow update: if request.auth.uid != null && 
        request.auth.uid in resource.data.participants;
      
      // Allow delete if user is a participant
      allow delete: if request.auth.uid != null && 
        request.auth.uid in resource.data.participants;
      
      // Messages subcollection - only participants can read/write
      match /messages/{messageId} {
        // Allow read if user is a participant in the parent chat
        allow read: if request.auth.uid != null && 
          request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
        
        // Allow create if user is authenticated and is a participant
        allow create: if request.auth.uid != null && 
          request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
        
        // Allow update/delete if user is the sender
        allow update, delete: if request.auth.uid != null && 
          request.auth.uid == resource.data.senderId;
      }
    }
    
    // Legacy flat messages collection (for backward compatibility during migration)
    match /messages/{messageId} {
      allow read: if request.auth.uid != null;
      allow write: if request.auth.uid != null;
    }
  }
}
